<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardBackgroundColor="#F3F3F3"
        app:cardCornerRadius="@dimen/_5sdp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="ATPL Navigator Plan 1"
               android:layout_margin="@dimen/_5sdp"
               android:id="@+id/nameProgress"
               android:textStyle="bold"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="50"
                   android:gravity="center_horizontal"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Lectures"
                           android:textColor="#6F6F6F"
                           android:textSize="10sp"
                           android:textStyle="bold" />

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="#6F6F6F" />
                   </LinearLayout>
                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:id="@+id/lectureRL"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerHorizontal="true"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/_5sdp">

                               <RelativeLayout
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_centerHorizontal="true">

                                   <ProgressBar
                                       android:id="@+id/progress_bar"
                                       style="@style/CircularDeterminateProgressBar"
                                       android:layout_width="55dp"
                                       android:layout_height="55dp" />

                                   <TextView
                                       android:id="@+id/textVideo"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerInParent="true"
                                       android:text="QWER"
                                       android:textSize="8dp"
                                       android:textStyle="bold" />
                               </RelativeLayout>
                           </RelativeLayout>

                           <TextView
                               android:id="@+id/videoTotal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text=""
                               android:textAlignment="center"
                               android:textSize="8sp"
                               android:textStyle="bold" />
                       </LinearLayout>
                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="@dimen/_50sdp">
                           <androidx.cardview.widget.CardView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:id="@+id/lecCard"
                               android:visibility="gone"
                               android:layout_centerVertical="true"
                               app:cardCornerRadius="@dimen/_8sdp">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="Not Applicable"
                                   android:textSize="10sp"
                                   android:layout_marginLeft="@dimen/_5sdp"
                                   android:layout_marginRight="@dimen/_5sdp"/>
                           </androidx.cardview.widget.CardView>

                       </RelativeLayout>

                   </RelativeLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="50"
                   android:orientation="vertical"
                   android:gravity="center_horizontal"
                   android:layout_gravity="center_horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="QBanks"
                           android:textSize="10sp"
                           android:textColor="#6F6F6F"
                           android:textStyle="bold"/>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="#6F6F6F"/>


                   </LinearLayout>

                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:id="@+id/qBankRL"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerHorizontal="true"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/_5sdp">

                               <RelativeLayout
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_centerHorizontal="true">

                                   <ProgressBar
                                       android:id="@+id/progress_barQBank"
                                       style="@style/CircularDeterminateProgressBar2"
                                       android:layout_width="55dp"
                                       android:layout_height="55dp" />

                                   <TextView
                                       android:id="@+id/textQBank"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerInParent="true"
                                       android:text="QWER"
                                       android:textSize="8dp"
                                       android:textStyle="bold" />
                               </RelativeLayout>

                           </RelativeLayout>

                           <TextView
                               android:id="@+id/QbankTotal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text=""
                               android:textAlignment="center"
                               android:textSize="8sp"
                               android:textStyle="bold" />
                       </LinearLayout>
                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="@dimen/_50sdp">
                           <androidx.cardview.widget.CardView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerVertical="true"
                               android:id="@+id/qBankCard"
                               android:visibility="gone"
                               app:cardCornerRadius="@dimen/_8sdp">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="Not Applicable"
                                   android:textSize="10sp"
                                   android:layout_marginLeft="@dimen/_5sdp"
                                   android:layout_marginRight="@dimen/_5sdp"/>
                           </androidx.cardview.widget.CardView>

                       </RelativeLayout>
                   </RelativeLayout>

                   <com.skydoves.progressview.ProgressView
                       android:id="@+id/progressView2"
                       android:layout_width="80dp"
                       android:layout_height="10dp"
                       app:progressView_autoAnimate="true"
                       app:progressView_colorBackground="@color/white"
                       app:progressView_colorProgress="#39A99F"
                       app:progressView_labelColorInner="@color/white"
                       app:progressView_labelColorOuter="@color/black"
                       app:progressView_labelSize="8sp"
                       app:progressView_labelText="40"
                       app:progressView_labelTypeface="bold"
                       android:layout_marginTop="@dimen/_15sdp"
                       app:progressView_max="100"
                       app:progressView_progressFromPrevious="true"
                       app:progressView_radius="8dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Accuracy"
                       android:textSize="8sp"
                       android:id="@+id/accuracyTxt"
                       android:layout_marginTop="@dimen/_2sdp"
                       android:layout_marginBottom="@dimen/_5sdp"
                       android:textColor="@color/color_gray_side_menu_text"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="50"
                   android:orientation="vertical"
                   android:gravity="center_horizontal"
                   android:layout_gravity="center_horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Tests"
                           android:textSize="10sp"
                           android:textColor="#6F6F6F"
                           android:textStyle="bold"/>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="#6F6F6F"/>
                   </LinearLayout>
                  <RelativeLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/tstRL"
                          android:layout_centerHorizontal="true">
                          <RelativeLayout
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/_5sdp">
                              <RelativeLayout
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_centerHorizontal="true">
                                  <ProgressBar
                                      android:id="@+id/progress_barTest"
                                      style="@style/CircularDeterminateProgressBar3"
                                      android:layout_width="55dp"
                                      android:layout_height="55dp"
                                      app:layout_constraintBottom_toBottomOf="parent"
                                      app:layout_constraintLeft_toLeftOf="parent"
                                      app:layout_constraintRight_toRightOf="parent"
                                      app:layout_constraintTop_toTopOf="parent"/>
                                  <TextView
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="QWER"
                                      android:textSize="8dp"
                                      android:id="@+id/textTest"
                                      android:layout_centerInParent="true"
                                      android:textStyle="bold"/>
                              </RelativeLayout>
                          </RelativeLayout>
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text=""
                              android:textAlignment="center"
                              android:textStyle="bold"
                              android:textSize="8sp"
                              android:id="@+id/testTotal"/>
                      </LinearLayout>
                      <RelativeLayout
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/_50sdp">
                          <androidx.cardview.widget.CardView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_centerVertical="true"
                              android:id="@+id/testCard"
                              android:visibility="gone"
                              app:cardCornerRadius="@dimen/_8sdp">
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Not Applicable"
                                  android:textSize="10sp"
                                  android:layout_marginLeft="@dimen/_5sdp"
                                  android:layout_marginRight="@dimen/_5sdp"/>
                          </androidx.cardview.widget.CardView>

                      </RelativeLayout>


                  </RelativeLayout>

                   <com.skydoves.progressview.ProgressView
                       android:id="@+id/progressView3"
                       android:layout_width="80dp"
                       android:layout_height="10dp"
                       app:progressView_autoAnimate="true"
                       app:progressView_colorBackground="@color/white"
                       app:progressView_colorProgress="#B888C9"
                       app:progressView_labelColorInner="@color/white"
                       app:progressView_labelColorOuter="@color/black"
                       app:progressView_labelText="40"
                       app:progressView_labelSize="8sp"
                       android:layout_marginTop="@dimen/_15sdp"
                       app:progressView_labelTypeface="bold"
                       app:progressView_max="100"
                       app:progressView_progressFromPrevious="true"
                       app:progressView_radius="8dp" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Accuracy"
                       android:textSize="8sp"
                       android:id="@+id/accuracyTxt2"
                       android:layout_marginTop="@dimen/_2sdp"
                       android:layout_marginBottom="@dimen/_5sdp"
                       android:textColor="@color/color_gray_side_menu_text"/>

               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>