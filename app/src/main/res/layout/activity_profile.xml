<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.flytrom.learning.base.BaseCallback" />
    </data>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/partial_toolbar_back"
                    app:callback="@{callback}" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/qwwe">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_120sdp"
                                android:background="@drawable/bg_gradient_home_back"
                                android:scaleType="fitXY"
                                android:id="@+id/qwert"
                                tools:ignore="ContentDescription" />

                            <RelativeLayout
                                android:id="@+id/relative_edit_pic"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:onClick="@{(v)->callback.onClick(v)}">

                                <ImageView
                                    android:id="@+id/image_profile"
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    app:srcCompat="@drawable/ic_user_placeholder"
                                    tools:ignore="ContentDescription" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/llnum"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_below="@id/qwert">
                                <LinearLayout
                                    android:id="@+id/relative_change_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:background="#F2F2F2"                            android:onClick="@{(v)->callback.onClick(v)}"
                                    tools:targetApi="lollipop">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:hint="Phone Number"
                                        android:padding="@dimen/_10sdp"
                                        android:singleLine="true"
                                        android:textColorHint="@color/gray_light" />
                                    <TextView
                                        android:id="@+id/text_phone_number"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:hint=""
                                        android:gravity="end"
                                        android:textColor="@color/colorPrimary"
                                        android:padding="@dimen/_10sdp"
                                        android:singleLine="true"
                                        android:textColorHint="@color/gray_light" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:orientation="horizontal"
                                    android:background="#F2F2F2"
                                    tools:targetApi="lollipop">

                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:background="?attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:ellipsize="end"
                                        android:focusable="true"
                                        android:hint="Email"
                                        android:padding="@dimen/_10sdp"
                                        android:singleLine="true"
                                        android:textColorHint="@color/gray_light" />
                                    <TextView
                                        android:id="@+id/text_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="?attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:ellipsize="end"
                                        android:textColor="@color/colorPrimary"
                                        android:focusable="true"
                                        android:gravity="end"
                                        android:hint=""
                                        android:padding="@dimen/_10sdp"
                                        android:singleLine="true"
                                        android:textColorHint="@color/gray_light" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:orientation="horizontal"
                                    android:id="@+id/llRegion"
                                    android:clickable="true"
                                    android:onClick="@{(v)->callback.onClick(v)}"
                                    android:background="#F2F2F2"                            tools:targetApi="lollipop">

                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:background="?attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:ellipsize="end"
                                        android:focusable="true"
                                        android:hint="Region"
                                        android:padding="@dimen/_10sdp"
                                        android:singleLine="true"
                                        android:textColorHint="@color/gray_light" />
                                    <TextView
                                        android:id="@+id/reagion"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:background="?attr/selectableItemBackground"
                                        android:ellipsize="end"
                                        android:gravity="end"
                                        android:textColor="@color/colorPrimary"
                                        android:focusable="true"
                                        android:hint="Region"
                                        android:padding="@dimen/_10sdp"
                                        android:singleLine="true"
                                        android:textColorHint="@color/gray_light" />

                                </LinearLayout>


                            </LinearLayout>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_15sdp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                app:cardBackgroundColor="@color/colorPrimary"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/llnum"
                                app:cardElevation="@dimen/_3sdp">

                                <TextView
                                    android:id="@+id/text_my_subs"
                                    style="@style/CustomTextViewRegular"
                                    android:layout_centerVertical="true"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:onClick="@{(v)->callback.onClick(v)}"
                                    android:padding="@dimen/_7sdp"
                                    android:textColor="@color/white"
                                    android:singleLine="true"
                                    android:text="@string/text_my_subscription"
                                    android:textColorHint="@color/gray_light"
                                    android:textSize="@dimen/_10sdp" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="INFORMATION"
                                    android:textColor="@color/colorPrimary"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:layout_marginTop="10dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:orientation="horizontal"
                                        android:background="@drawable/bg_round_white_filled_less"
                                        tools:targetApi="lollipop">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginEnd="0dp"
                                            android:layout_marginBottom="0dp"
                                            android:ellipsize="end"
                                            android:enabled="false"
                                            android:hint="Name"
                                            android:padding="@dimen/_12sdp"
                                            android:singleLine="true"
                                            android:text="" />
                                        <TextView
                                            android:id="@+id/edit_text_name"
                                            style="@style/CustomEditText"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginEnd="0dp"
                                            android:layout_marginBottom="0dp"
                                            android:ellipsize="end"
                                            android:enabled="false"
                                            android:gravity="end"
                                            android:hint="@string/first_name"
                                            android:padding="@dimen/_12sdp"
                                            android:singleLine="true"
                                            android:text="" />

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0"
                                        android:background="@drawable/bg_round_white_filled_less"
                                        android:visibility="gone"
                                        tools:targetApi="lollipop">

                                        <EditText
                                            android:id="@+id/edit_text_last_name"
                                            style="@style/CustomEditText"
                                            android:ellipsize="end"
                                            android:enabled="false"
                                            android:hint="@string/last_name"
                                            android:maxLength="12"
                                            android:padding="@dimen/_8sdp"
                                            android:singleLine="true"
                                            android:text=""
                                            android:textSize="@dimen/_14sdp" />

                                    </RelativeLayout>

                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/relative_cpl"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:visibility="gone"
                                    android:background="@drawable/bg_round_white_filled_less"
                                    android:onClick="@{(v)->callback.onClick(v)}"
                                    tools:targetApi="lollipop">

                                    <EditText
                                        android:id="@+id/edit_text_cpl"
                                        style="@style/CustomEditText"
                                        android:layout_width="match_parent"
                                        android:layout_centerVertical="true"
                                        android:layout_toStartOf="@+id/image_edit_cpl"
                                        android:enabled="false"
                                        android:hint="Enter CPL Number"
                                        android:inputType="numberDecimal"
                                        android:padding="@dimen/_10sdp"
                                        android:singleLine="true"
                                        android:textColorHint="@color/gray_light" />

                                    <ImageView
                                        android:id="@+id/image_edit_cpl"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:padding="@dimen/_7sdp"
                                        android:src="@drawable/ic_profile_edit"
                                        android:tint="@color/black"
                                        android:visibility="invisible" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relative_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:visibility="gone"
                                    android:background="@drawable/bg_round_white_filled_less"
                                    android:onClick="@{(v)->callback.onClick(v)}"
                                    tools:targetApi="lollipop">

                                    <TextView
                                        style="@style/CustomEditText"
                                        android:layout_width="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:enabled="false"
                                        android:hint="Date of Birth"
                                        android:inputType="numberDecimal"
                                        android:padding="@dimen/_10sdp"
                                        android:singleLine="true"
                                        android:textColorHint="@color/gray_light" />

                                    <TextView
                                        android:id="@+id/dateofbirth"
                                        style="@style/CustomEditText"
                                        android:layout_width="match_parent"
                                        android:layout_centerVertical="true"
                                        android:enabled="false"
                                        android:gravity="end"
                                        android:hint="Date of Birth"
                                        android:inputType="numberDecimal"
                                        android:padding="@dimen/_10sdp"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/gray_light" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/bg_round_white_filled_less"
                                    tools:targetApi="lollipop">

                                    <TextView
                                        style="@style/CustomTextViewRegular"
                                        android:layout_width="match_parent"
                                        android:background="?attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:ellipsize="end"
                                        android:focusable="true"
                                        android:hint="Designation"
                                        android:padding="@dimen/_12sdp"
                                        android:singleLine="true"
                                        android:textColorHint="@color/gray_light" />
                                    <TextView
                                        android:id="@+id/text_designation"
                                        style="@style/CustomTextViewRegular"
                                        android:layout_width="match_parent"
                                        android:background="?attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:ellipsize="end"
                                        android:focusable="true"
                                        android:gravity="end"
                                        android:hint="Designation"
                                        android:padding="@dimen/_12sdp"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/gray_light" />

                                </RelativeLayout>
                                <RelativeLayout
                                    android:id="@+id/relative_atpl"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/bg_round_white_filled_less"
                                    android:onClick="@{(v)->callback.onClick(v)}"
                                    tools:targetApi="lollipop">

                                    <EditText
                                        style="@style/CustomEditText"
                                        android:layout_width="match_parent"
                                        android:layout_centerVertical="true"
                                        android:enabled="false"
                                        android:hint="Licence Number"
                                        android:inputType="numberDecimal"
                                        android:padding="@dimen/_10sdp"
                                        android:singleLine="true"
                                        android:textColorHint="@color/gray_light" />
                                    <EditText
                                        android:id="@+id/edit_text_atpl"
                                        style="@style/CustomEditText"
                                        android:layout_width="match_parent"
                                        android:layout_centerVertical="true"
                                        android:enabled="false"
                                        android:gravity="end"
                                        android:hint="Enter ATPL Number"
                                        android:inputType="numberDecimal"
                                        android:padding="@dimen/_10sdp"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/gray_light" />


                                </RelativeLayout>


                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="20dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_gravity="center_horizontal"
                                    app:cardBackgroundColor="@color/color_red">
                                    <RelativeLayout
                                        android:id="@+id/relative_logout"
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:onClick="@{(v)->callback.onClick(v)}"
                                        tools:targetApi="lollipop">

                                        <TextView
                                            android:id="@+id/text_version"
                                            style="@style/CustomTextViewMedium"
                                            android:layout_width="match_parent"
                                            android:hint="Logout"
                                            android:gravity="center"
                                            android:textColor="@color/white"
                                            android:textColorHint="@color/white"
                                            android:layout_centerHorizontal="true"
                                            android:layout_height="match_parent"/>

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>


                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </RelativeLayout>
</layout>

