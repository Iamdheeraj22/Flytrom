<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="Loader" parent="android:Theme.Translucent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:backgroundDimEnabled">true</item>-->
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="DialogTheme2" parent="android:Theme.Translucent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomTextViewRegular" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextViewMedium" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextViewBold" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomEditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:fontFamily">@font/calibrib_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <!--*********************dialog*****************************-->
    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Dialog.Window</item>

    </style>

    <style name="Dialog.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_normal</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="CustomRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="SelectableItemBackgroundWithBorder">
        <item name="android:theme">@style/SelectableItemThemeWithBorder</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemThemeWithBorder">
        <item name="colorControlHighlight">@color/gray_light</item>
    </style>

    <style name="SelectableItemBackgroundBorderLess">
        <item name="android:theme">@style/SelectableItemThemeBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SelectableItemThemeBorderless">
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#A23333</item>
        <item name="colorControlActivated">#AD9B9B</item>
    </style>

    <style name="TabTextRegular" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="VdoMediaButtonNew">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">@dimen/_44sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="SeekBarWithoutSteps" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@null</item>
    </style>

    <declare-styleable name="PDFViewPager">
        <attr name="swipe_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog.Alert">

        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowAnimationStyle">@style/CustomDialog.Window</item>-->

    </style>

    <style name="CustomDialog.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_normal</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="MyStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/blue_text_color</item>
        <item name="tabIndicatorHeight">@dimen/_1sdp</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="tabSelectedTextColor">@color/blue_text_color</item>
        <item name="tabTextColor">@color/gray_dark</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/color_gradient_end</item>
        <item name="android:calendarTextColor">@color/red</item>
        <item name="android:dayOfWeekBackground">@color/red</item>
        <item name="android:datePickerMode">calendar</item>

    </style>
    <style name="DialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item><!--show wrap_parent of dialog-->
        <item name="android:windowIsTranslucent">true</item>
        <!--button cancel/ok color-->
        <item name="android:colorAccent">@color/red</item>
        <!--text selected color-->
        <item name="colorSecondary">@color/green</item>

        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:background">@color/color_gradient_end</item>

    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>
    <style name="CircularDeterminateProgressBar2">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_qbank</item>
    </style>
    <style name="CircularDeterminateProgressBar3">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_test</item>
    </style>

    <style parent="ThemeOverlay.AppCompat.Dialog.Alert" name="TrackSelectionDialogThemeOverlay">

        <item name="windowNoTitle">false</item>

    </style>
</resources>
